# =========================
# CONFIGURAÇÕES DO SERVIDOR
# =========================
PORT=3000
NODE_ENV=development          # 'development' ou 'production'

# =========================
# RATE LIMIT (express-rate-limit)
# =========================
RATE_LIMIT_WINDOW_MS=60000    # 1 minuto em milissegundos
RATE_LIMIT_MAX=100            # Máximo de 100 requisições por IP por janela

# =========================
# BANCO DE DADOS (SQLite)
# =========================
DB_FILE=./database/tasks.db   # Caminho do arquivo SQLite
DB_LOG=true                   # true para log de queries (apenas em dev)

# =========================
# JWT (Autenticação)
# =========================
JWT_SECRET=sua_chave_secreta_aqui   # Troque para algo realmente seguro
JWT_EXPIRATION=24h                  # Tempo de expiração do token

# =========================
# CONFIGURAÇÕES ADICIONAIS
# =========================
CORS_ORIGIN=http://localhost:3000   # URL permitida para requisições (frontend)
